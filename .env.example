# ===========================================
# Changple AI Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# -------------------------------------------
# Database
# -------------------------------------------
POSTGRES_USER=changple
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_URL=redis://redis:6379

# -------------------------------------------
# Django (Core Service)
# -------------------------------------------
DJANGO_SECRET_KEY=your_django_secret_key_here
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,changple.ai

# -------------------------------------------
# AI Services (Agent Service)
# -------------------------------------------
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=your_google_api_key_here

# -------------------------------------------
# Vector Database
# -------------------------------------------
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=changple-index
PINECONE_ENVIRONMENT=us-east-1

# -------------------------------------------
# Naver OAuth (Core Service)
# -------------------------------------------
SOCIAL_AUTH_NAVER_KEY=your_naver_client_id
SOCIAL_AUTH_NAVER_SECRET=your_naver_client_secret
SOCIAL_AUTH_NAVER_CALLBACK_URL=http://localhost:8000/api/v1/auth/naver/callback/

# -------------------------------------------
# Naver API (Scraper - if needed)
# -------------------------------------------
NAVER_CLIENT_ID=your_naver_api_client_id
NAVER_CLIENT_SECRET=your_naver_api_client_secret
