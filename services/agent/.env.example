# =============================================================================
# Changple Agent Service - Environment Variables
# =============================================================================
# Copy to .env and fill in values.

# -----------------------------------------------------------------------------
# Service Settings
# -----------------------------------------------------------------------------
DEBUG=true
CORE_SERVICE_URL=http://core:8000

# -----------------------------------------------------------------------------
# Infrastructure
# -----------------------------------------------------------------------------
# LangGraph Checkpoint DB
LANGGRAPH_DATABASE_URL=postgresql://changple:changple@postgres:5432/changple_langgraph

# Redis
REDIS_URL=redis://redis:6379/1

# -----------------------------------------------------------------------------
# AI Service Keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=...
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=changple-index

# -----------------------------------------------------------------------------
# LangChain / LangSmith (Tracing)
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=...
LANGCHAIN_PROJECT=changple-v3
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# -----------------------------------------------------------------------------
# LLM Settings
# -----------------------------------------------------------------------------
DEFAULT_MODEL=gemini-2.5-flash
EMBEDDING_MODEL=text-embedding-3-large
