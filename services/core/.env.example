# =============================================================================
# Changple Core Service - Environment Variables
# =============================================================================
# Copy to .env and fill in values.

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DJANGO_SECRET_KEY=your-django-secret-key-here
DJANGO_DEBUG=true
ALLOWED_HOSTS=*

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=changple
POSTGRES_USER=changple
POSTGRES_PASSWORD=changple

# -----------------------------------------------------------------------------
# Redis & Celery
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Naver OAuth (Login)
# -----------------------------------------------------------------------------
SOCIAL_AUTH_NAVER_KEY=your-naver-client-id
SOCIAL_AUTH_NAVER_SECRET=your-naver-client-secret

# -----------------------------------------------------------------------------
# Naver API (Scraper)
# -----------------------------------------------------------------------------
NAVER_CLIENT_ID=your-naver-api-client-id
NAVER_CLIENT_SECRET=your-naver-api-client-secret

# -----------------------------------------------------------------------------
# AI Service Keys (for Scraper/Ingestion)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=...
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=changple-index
